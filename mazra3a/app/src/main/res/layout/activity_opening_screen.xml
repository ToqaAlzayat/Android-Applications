<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/gray"
    tools:context=".opening_screen">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="40dp">

        <ImageButton
            android:id="@+id/ib_registration"
            android:layout_width="180dp"
            android:layout_height="208dp"
            android:background="@drawable/registration" />

        <ImageButton
            android:id="@+id/ib_add_farm"
            android:layout_width="189dp"
            android:layout_height="248dp"
            android:background="@drawable/addfarm" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="40dp">

        <ImageButton
            android:id="@+id/ib_add_activity"
            android:layout_width="174dp"
            android:layout_height="252dp"
            android:background="@drawable/addactivity" />

        <ImageButton
            android:id="@+id/ib_labor_distribution"
            android:layout_width="189dp"
            android:layout_height="243dp"
            android:background="@drawable/labordistribution" />
    </LinearLayout>
</LinearLayout>